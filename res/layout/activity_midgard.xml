<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_bk"
    android:orientation="vertical"
    android:weightSum="800" >



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_weight="182" >
          <ImageView
       android:id="@+id/imageView1"
       android:src="@drawable/menu_01"
       android:scaleType="centerInside"
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       />
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="618"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
         >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:weightSum="480" >
            
             <ImageButton
                 android:id="@+id/imageButton1"
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:background="#00000000"
                 android:scaleType="centerInside"
                 android:src="@drawable/menu_02" 
                 android:layout_weight="128"
                 />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="115"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_03" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="116"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_04" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="121"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_05" />
 
        </LinearLayout>

     </RelativeLayout>



</LinearLayout>

